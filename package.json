{
  "name": "react-error-logger",
  "author": "Sapronov Konstantin",
  "private": false,
  "version": "0.1.1",
  "description": "React component for catching and logging JavaScript errors, unhandled promise rejections, and React ErrorBoundary errors with the ability to view and download logs",
  "license": "MIT",
  "type": "module",
  "homepage": "https://github.com/shopot/react-error-logger",
  "keywords": [
    "react",
    "typescript",
    "error",
    "logging",
    "error boundary",
    "error handling"
  ],
  "exports": {
    ".": {
      "types": "./dist/lib/main.d.ts",
      "default": "./dist/main.js"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shopot/react-error-logger"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b ./tsconfig.lib.json && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "stylelint": "stylelint \"**/*.{css,scss}\"",
    "stylelint:fix": "stylelint \"**/*.{css,scss}\" --fix",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^6.0.0"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@stylistic/eslint-plugin": "5.6.1",
    "@types/node": "24.10.1",
    "@types/react": "18.3.5",
    "@types/react-dom": "18.3.0",
    "@vitejs/plugin-react": "5.1.1",
    "eslint": "9.39.1",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-refresh": "0.4.24",
    "glob": "13.0.0",
    "globals": "16.5.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-error-boundary": "^6.0.0",
    "sass": "1.94.2",
    "stylelint": "16.26.1",
    "stylelint-config-standard-scss": "16.0.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.4",
    "vite": "7.2.4",
    "vite-plugin-dts": "4.5.4",
    "vite-plugin-lib-inject-css": "2.2.2"
  }
}
